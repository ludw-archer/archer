alias ....='cd ../../..'
alias ...='cd ../..'
alias ..='cd ..'

alias cp='cp -iv'
alias mkdir='mkdir -pv'
alias mv='mv -iv'
alias rm='rm -Iv'

alias cpuinfo='lscpu'
alias df='df -h'
alias free='free -h'
alias meminfo='cat /proc/meminfo'
