alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias cpi='cp -iv'
alias curlL='curl -L'
alias dfh='df -h'
alias freeh='free -h'
alias mvi='mv -iv'
alias rmi='rm -Iv'

alias cpuinfo='lscpu'
alias meminfo='cat /proc/meminfo'
alias sys='fastfetch'
alias zram='zramctl && free -h && swapon --show --bytes'

alias diskusage='du -sh -- * 2>/dev/null | sort -h'
alias duh='du -h --max-depth=1'

alias flushcache='sync && echo 3 | sudo tee /proc/sys/vm/drop_caches >/dev/null'
alias flushdns='sudo nmcli general reload && nmcli connection up "$(nmcli -t -f NAME connection show --active | head -n1)"'
alias ipa='ip -c a'
alias ipinfo='curl -s ipinfo.io'
alias myip="ip -4 addr show | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}'"
alias ntp-check='echo -e "\n[ Service ]"; systemctl is-active systemd-timesyncd; echo -e "\n[ timedatectl ]"; timedatectl status'
alias pingg='ping archlinux.org'
alias ports='sudo ss -tulwn'
alias wgetc='wget --hsts-file="$HOME/.cache/wget-hsts"'
alias whichport='sudo ss -tulwn | grep LISTEN'

alias fdn='fd -HI --type f'
alias ffind='fd'
alias fna='find . -type f -iname'
alias fnd='find . -iname'

alias install='sudo pacman -S'
alias pacq='pacman -Qs'
alias pacs='pacman -Ss'
alias remove='sudo pacman -Rns'
alias updata='sudo pacman -Syyu'
alias update='sudo pacman -Syu'

alias cl-all='sudo paccache -ruk0'
alias cl-broken='sudo pacman -Dk && sudo pacman -Qk'
alias cl-cache='sudo paccache -rk1'
alias cl-orphs='orphs=$(pacman -Qtdq 2>/dev/null); [[ -n "$orphs" ]] && sudo pacman -Rns $orphs || echo "No orphaned packages found."'

alias journal='journalctl -p 3 -xb'
alias journalf='journalctl -xe'
alias seractive='systemctl list-units --type=service --state=active'
alias serall='sudo systemctl list-unit-files --type service --all'
alias serfailed='systemctl list-units --type=service --state=failed'
alias serinactive='systemctl list-units --type=service --state=inactive'
alias sysdisabled='systemctl list-unit-files --state=disabled'
alias sysenabled='systemctl list-unit-files --state=enabled'
alias syslist='systemctl list-units --type=service'
alias sysstatus='systemctl --failed'

alias ccat='bat'
alias cdiff='grc diff'
alias cls='clear'
alias cps='grc ps'
alias ctail='grc tail'
alias ge='gnome-text-editor'
alias hosts='sudo nano /etc/hosts'
alias lt='tree'
alias na='nano'
alias path='echo -e "${PATH//:/"\n"}"'
alias top='htop'

alias clean=': > "$HISTFILE"; fc -R'
alias q='exit'
alias re-alias='source ~/.zshrc'
alias re-load='exec zsh'

alias dracup='sudo -i dracut -f -v'
alias fwup='sudo fwupdmgr get-updates && sudo fwupdmgr update'
alias mk='sudo mkinitcpio -P'

alias yta='yt-dlp --extractor-args "youtube:player_client=android" -f "ba/b" --extract-audio --audio-format mp3'
alias ytv='yt-dlp --extractor-args "youtube:player_client=android" -f "bv*+ba/b" --merge-output-format mp4'

